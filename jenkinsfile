pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Allekarthik/integration.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                // Example: for Node.js or Java
                // sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // For example, copy files to a folder, or deploy to Docker
                // sh 'docker build -t myapp .'
                // sh 'docker run -d -p 8081:80 myapp'
            }
        }
    }
}
